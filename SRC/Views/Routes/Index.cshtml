@model IEnumerable<TransportManagementSystem.Models.Route>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stop)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stop)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.RouteNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RouteNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RouteNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Index","Home")'"><b>Back</b></button>
