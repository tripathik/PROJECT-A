@model IEnumerable<TransportManagementSystem.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create">Add Vehicles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverContact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsOperable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAC)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DriverContact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsOperable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAC)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VehicleNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VehicleNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VehicleNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Index","Home")'"><b>Back</b></button>
