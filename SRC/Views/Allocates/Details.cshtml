@model TransportManagementSystem.Models.Allocate

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Allocated Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmpId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmpId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.EmployeeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VehicleNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Vehicle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vehicle.VehicleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RouteNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.RouteNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Route.Stop)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Route.Stop)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary" onclick="location.href = '@Url.Action("Index","Allocates")'">Back</button>
    
</div>
