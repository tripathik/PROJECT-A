
@inject SignInManager<IdentityUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TransportManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/fontawesome.css" rel="stylesheet">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-0" style="margin-left:-180px; margin-bottom:-100px">
            <div class="container">
                <img src="~/Image/logo.jpg" class="img-center" height="50" width="50" />

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:white">TransportManagement</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="Home" style="margin-right: -200px;">
                                    <button type="submit" class="nav-link btn  btn-danger py-0"
                                            style="width:auto; margin-right:-390px">
                                        Logout
                                    </button><h2 style="color:white"> @User.Identity.Name</h2>


                                </form>
                            </li>
                        
                         }


                    </ul>
                </div>
            </div>
        </nav>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-secondary border-bottom box-shadow " style="margin-left:-180px; margin-top:-20px; height:40px;">
            <div class="container">
               

               
                @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Vehicles" asp-action="Index">Manage Vehicles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Routes" asp-action="Index">Manage Routes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Employees" asp-action="Index">Allocate Vehicles</a>
                        </li>
                    </ul>
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="bg-img" style="background-size: 100%; background-repeat: no-repeat; min-height: 500px; background-color:lightblue;">



        <div id="About" style="margin-top: 20px;">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div id="AboutData">
                            <div class="card bg-white">
                                <div class="card-title my-3">
                                    <div class="media">
                                        <img src="~/Image/bg2.jpg" width="550" height="550" class="img-fluid rounded-top mx-5" />
                                        <div class="media-body">
                                            <h3 class="display-4">About</h3>
                                            <p class="text-muted">Here We are Providing Various Vehicles followed by different routs. You may allocate the different Vehicles as per your requirements.</p>
                                            

                                            </div>
                                        </div>

                                    </div>

                                    <div class="card-footer bg-danger">
                                        <a href="#"><i class="fa fa-facebook fa-2x mx-3"></i></a>
                                        <a href="#"><i class="fa fa-twitter fa-2x mx-3"></i></a>
                                        <a href="#"><i class="fa fa-instagram fa-2x mx-3"></i></a>
                                        <a href="https://github.com/tripathik"><i class="fa fa-github fa-2x mx-3"></i></a>
                                        <a href="#"><i class="fa fa-linkedin fa-2x mx-3"></i></a>
                                        <a href="#"><i class="fa fa-youtube fa-2x mx-3"></i></a>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>
        <footer class="border-top footer text-muted bg-dark">
            <div class="container">
                &copy; 2021 - TransportManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
